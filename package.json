{
  "name": "Coflux",
  "version": "0.1.0",
  "description": "Component-based Flux",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "preversion": "npm run clean && npm run check",
    "postversion": "git push && git push --tags && npm run clean && npm run docs:publish",
    "version": "npm run build",
    "clean": "rimraf lib",
    "start": "npm run build:watch:demos & node ./server.js",
    "lint": "eslint src/**",
    "test": "mocha --compilers js:babel/register --recursive src/**/__tests__/*.js",
    "check": "npm run lint && npm run test:all",
    "build:demos": "webpack --config demos/webpack.config.js",
    "build:watch:demos": "webpack --watch --config demos/webpack.config.js",
    "build:dist": "babel src --out-dir lib",
    "test:watch": "mocha --compilers js:babel/register --recursive src/**/__tests__/*.js --watch",
    "travis": "istanbul cover _mocha -- --compilers js:babel/register --recursive src/**/__tests__/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/airbnb/enzyme.git"
  },
  "keywords": [
    "javascript",
    "shallow rendering",
    "shallowRender",
    "test",
    "reactjs",
    "react",
    "flux",
    "testing",
    "test utils",
    "assertion helpers",
    "tdd",
    "mocha"
  ],
  "author": "Leland Richardson <leland.richardson@airbnb.com>",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.4.5",
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "devDependencies": {
    "babel-core": "^6.5.2",
    "babel-eslint": "^4.1.6",
    "babel-jest": "^9.0.3",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-css-modules-transform": "0.0.7",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "body-parser": "^1.15.0",
    "chai": "^3.2.0",
    "coveralls": "^2.11.4",
    "css-loader": "^0.23.1",
    "enzyme": "^2.2.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.0.2",
    "eslint-config-hudl": "^4.0.1",
    "eslint-plugin-react": "^3.14.0",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "gitbook-cli": "^1.0.0",
    "istanbul": "^0.4.0",
    "jest-cli": "^0.9.2",
    "mocha": "^2.2.5",
    "prettyjson": "^1.1.3",
    "react-addons-test-utils": "^0.14.7",
    "react-router": "^2.0.0",
    "rimraf": "^2.4.3",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.14"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "react",
      "src/",
      "enzyme"
    ]
  }
}
